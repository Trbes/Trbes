.post-footer
  div[
    class="post-state post-state-{{ post.state }}"
    ng-if="authorizer.policy(POLICIES.post_display_state, post)"
    ng-bind="post.state"]

  a[
    ng-if="authorizer.policy(POLICIES.post_edit, post)"
    href="#"
    data-toggle="modal"
    data-target="#edit_post_{{ post.id }}" ] Edit

  span<>[
    ng-if="authorizer.policy(POLICIES.post_edit, post) &&
           authorizer.policy(POLICIES.post_destroy, post)" ] â€¢

  a[
    ng-if="authorizer.policy(POLICIES.post_destroy, post)"
    href="{{ post.path }}"
    data-method="delete"
    data-confirm="Are you sure?" ] Delete

  .modal.fade data-backdrop="static"[
    id="edit_post_{{post.id}}"
    ng-if="authorizer.policy(POLICIES.post_edit, post)" ]
    .modal-dialog
      .modal-content
        .modal-header
          button.close aria-label="Close" data-dismiss="modal" type="button"
            span aria-hidden="true"  &times;
          h4.modal-title Edit Post
        .modal-body
          div[ng-include="'/assets/trbes_angular/posts/' + post.post_type + '/_form.html'"]
